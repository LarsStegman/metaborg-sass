module desugar-expression-test

language sass

fixture [[
.x {
  y: [[...]];
}
]]

test desugar hex shorthand to full hex [[
#1af
]] run desugar-exp to Hex("11aaff")

test desugar addition [[
1 + 3
]] run desugar-all to BinExp(Add(), Number("1", Int()), Number("3", Int()))

test desugar subtraction [[
1 - 3
]] run desugar-exp to BinExp(Sub(), Number("1", Int()), Number("3", Int()))

test desugar multiplication [[
1 * 1
]] run desugar-exp to BinExp(Mul(), Number("1", Int()), Number("1", Int()))

test desugar division [[
1 / 1
]] run desugar-exp to BinExp(Div(), Number("1", Int()), Number("1", Int()))

test desugar modulo [[
1 % 1
]] run desugar-exp to BinExp(Mod(), Number("1", Int()), Number("1", Int()))

test desugar complex expression [[
1 % 1 == 0
]] run desugar-exp to BinExp(Eq(), 
                        BinExp(Mod(), Number("1", Int()), Number("1", Int())), 
                        Number("0", Int()))

test desugar or [[
true or false
]] run desugar-exp to BinExp(Or(), True(), False())

test desugar and [[
true and false
]] run desugar-exp to BinExp(And(), True(), False())

test desugar equal [[
true == false
]] run desugar-exp to BinExp(Eq(), True(), False())

test desugar not equal [[
true != false
]] run desugar-exp to UnExp(Not(), BinExp(Eq(), True(), False()))

test desugar greater than [[
5 > 4
]] run desugar-exp to BinExp(Gt(), Number("5", Int()), Number("4", Int()))

test desugar greater equal than [[
5 >= 4
]] run desugar-exp to BinExp(Or(), 
                        BinExp(Gt(), Number("5", Int()), Number("4", Int())),
                        BinExp(Eq(), Number("5", Int()), Number("4", Int())))

test desugar less than [[
5 < 4
]] run desugar-exp to BinExp(Lt(), Number("5", Int()), Number("4", Int()))

test desugar less equal than [[
5 <= 4
]] run desugar-exp to BinExp(Or(), 
                        BinExp(Lt(), Number("5", Int()), Number("4", Int())),
                        BinExp(Eq(), Number("5", Int()), Number("4", Int())))

test desugar not than [[
not true 
]] run desugar-exp to UnExp(Not(), True())

test length [[
5px
]] run desugar-all to Length(Number("5", Int()), Unit("px", 1)) 


