module desugar-expression-test

language sass

fixture [[
.x {
  y: [[...]];
}
]]

test desugar length addition [[
1px + 2px
]] run desugar-all to Length(BinExp(Add(), Int("1"), Int("2")), "px")

test desugar length multiplication with int [[
2 * 4px
]] run desugar-all to Length(BinExp(Mul(), Int("2"), Int("4")), "px")

test desugar length multiplication with int right [[
4px * 8
]] run desugar-all to Length(BinExp(Mul(), Int("4"), Int("8")), "px")

test desugar length subtraction [[
4px - 8px
]] run desugar-all to Length(BinExp(Sub(), Int("4"), Int("8")), "px")
