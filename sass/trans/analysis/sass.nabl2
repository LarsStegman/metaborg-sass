module analysis/sass

imports
  analysis/-

signature 
  name resolution
    constructors
      NumberT : -> Type
      BoolT   : -> Type
      StringT : -> Type
      NullT   : -> Type
      ColourT : -> Type
      LengthT : String * Int -> Type // Unit * exponent
    
    namespaces
      Var
      Function
      Mixin

name resolution
  labels
    G // Global scope
    P

  order 
    D < G,
    D < P,
    G < P   

  well-formedness
    P* G*

rules
  
  init.

  [[ Script(items) ]] :=
    new sS, 
    RootScopeIterative[[ items ^ (sS) ]].
 
  RootScopeIterative[[ [] ^ (_) ]].
  ScopeIterative    [[ [] ^ (_, nGS, finalGS) ]] :=
    finalGS -G-> nGS.
    